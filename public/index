<body>
  <div id="app">Loading task...</div>

  <script>
    Frontend.init();

    function renderTaskUI(task) {
      const app = document.getElementById("app");
      const colorClass = task.status === "automated" ? "auto" :
                         task.status === "semi_automated" ? "semi" : "manual";

      app.innerHTML = `
        <div class="task-panel">
          <div class="task-type">ðŸ›« ${task.type.replace("_", " ").toUpperCase()}</div>
          <div class="status ${colorClass}">Status: ${task.status.replace("_", " ").toUpperCase()}</div>
          <div class="suggestion">
            ${task.suggestion}
          </div>
          ${task.status === "semi_automated" ? '<button class="approve" onclick="alert(\'Approved\')">Approve and Send</button>' : ''}
          ${task.status !== "automated" ? '<button class="open-dashboard" onclick="window.open(\'https://your-agent-dashboard.com/task/123\', \'_blank\')">Open in Task Console</button>' : ''}
          ${task.status === "automated" ? '<div class="handled-tag">âœ… Handled Automatically</div>' : ''}
        </div>
      `;
    }

    function fetchTaskFor(conversationId) {
      const mockData = {
        "conv_001": {
          type: "flight_booking",
          status: "semi_automated",
          suggestion: "Suggests booking Madrid â†’ Amsterdam on Aug 15 at â‚¬142"
        },
        "conv_002": {
          type: "invoice_retrieval",
          status: "automated",
          suggestion: "Invoice for Booking #223489 has been retrieved."
        },
        "conv_003": {
          type: "hotel_change",
          status: "manual",
          suggestion: "Suggests finding 3 quieter hotel options near the original booking."
        }
      };
      const task = mockData[conversationId] || mockData["conv_001"];
      renderTaskUI(task);
    }

    Frontend.context().then(ctx => {
      const conversationId = ctx.conversation?._id || "conv_001";
      fetchTaskFor(conversationId);
    });
  </script>
</body>
</html>
